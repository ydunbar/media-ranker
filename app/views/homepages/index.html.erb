<!-- copied from class example -->
<section class="spotlight">

    <h2 class="spotlight_header">
        <span class="spotlight__header--prefix">
            Media Spotlight:
        </span>
        <%= link_to Work.spotlight.title, work_path(Work.spotlight.id), class: "spotlight__link-to" %> by <%= Work.spotlight.creator %>  
    </h2>
    <p class="spotlight__description">
        <%= Work.spotlight.votes.length %> votes - <%= Work.spotlight.description %>
        <%= Work.spotlight.category %>
    </p>

</section>

<hr class="root_hr">

<section class="top-ten__container">
    <section class="top-ten__list-container">
        <h2 class="top-ten__header">
            Top Movies
        </h2>
        <ul class="list-group top-ten__list">
            <% movies = Work.top_ten("movie")%>
            <% movies.each do |work|%>
                <li class="list-group-item">
                    <h4>
                        <%= link_to work.title, work_path(work.id)%> 
                        <small class="top-ten__creator">
                            by <%= work.creator %>
                        </small>
                    </h4>      
                    <p><%= work.votes.count %> votes</p>
                </li>
            <% end %>
        </ul>
    </section>
    <section class="top-ten__list-container">
        <h2 class="top-ten__header">
            Top Books
        </h2>
        <ul class="list-group top-ten__list">
            <% books = Work.top_ten("book")%>
            <% books.each do |work|%>
                <li class="list-group-item">
                    <h4>
                        <%= link_to work.title, work_path(work.id) %>
                        <small class="top-ten__creator">
                            by <%= work.creator %>
                        </small>
                    </h4>
                    <p><%= work.votes.count %> votes</p>
                </li>
            <% end %>
        </ul>
    </section>
    <section class="top-ten__list-container">
        <h2 class="top-ten__header">
            Top Albums
        </h2>
        <ul class="list-group top-ten__list">
            <%# top ten albums go here %>
            <% albums = Work.top_ten("album")%>
            <% albums.each do |work|%>
                <li class="list-group-item">
                    <h4>
                        <%= link_to work.title, work_path(work.id) %>
                        <small class="top-ten__creator">
                            by <%= work.creator %>
                        </small>
                    </h4>
                    <p><%= work.votes.count %> votes</p>
                </li>
            <% end %>
        </ul>
    </section>
</section>