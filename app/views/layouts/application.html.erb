<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- copied from class example -->
    <header class="app-header__header">
    <h1>
      <%= link_to "Media Ranker", root_path %> <!--link to home -->
      <small>Ranking the Best of Everything</small>
    </h1>
    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
          <%= link_to "View top media", root_path %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "View all media", works_path %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "Add a new work", new_work_path %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "View all users", users_path %>
        </li>
      </ul>

      <ul class="nav app-header__user-nav-container">
        <li class="nav-item app-header__nav_item">
          <button type="button" class="btn btn-primary">
            <%= link_to "Log In", login_path %>
          </button>
        </li>
        <li class="nav-item app-header__nav_item">
          <button type="button" class="btn btn-primary">
            <%= link_to "Log Out", logout_path, method: :post %>
          </button>
        </li>
      </ul>
    </nav>
    </header>

    <section class="alert__container">
      <% flash.each do |name, message| %>
        <div class="alert alert-<%= name %>" >
          <span><%= message %></span>
        </div>
      <% end %>
    </section>

    <%= yield %>
  </body>
</html>
