<%= form_with model: @work, class: 'create-work' do |f| %>
    <%= f.label :category %>
    <%= f.text_field :category %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :year %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Create Work", class: "btn btn-primary" %>

<% end %>