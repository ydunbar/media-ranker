<% if @work.errors.any? %>
    <ul class="errors">
        <% @work.errors.each do |column, message| %>
            <li>
                <strong><%= column.capitalize %></strong> <%= message %>
            </li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @work, class: 'create-work' do |f| %>
    <%= f.label :category %>
    <%= f.text_field :category %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :year %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Update Work", class: "btn btn-primary" %>

<% end %>