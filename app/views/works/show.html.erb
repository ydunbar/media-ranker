<section>
<h2><%= @work.title %></h2>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.year %></p>
<p><%= @work.description %></p>
</section>

<section>
    <button type="button" class="btn btn-primary"><%= link_to 'Back to media ranks', root_path %></button>
    <button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_work_path %></button>
    <button type="button" class="btn btn-primary"><%= link_to 'Upvote', upvote_path( @work.id ), method: :post %></button>
    <button type="button" class="btn btn-danger"><%= link_to 'Delete', work_path( @work.id ), method: :delete, data: {confirm: "Are you sure?"}%></button>
</section>

<section class="works-votes__container">
    <h3 class="works-votes__header">
        <%= @work.votes.count%> Votes for this <%= @work.category.capitalize%>
    </h3>
    <%# Users who voted table %>
</section>